<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#515151">

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#515151"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:context=".GameActivity"
        tools:visibility="visible">


        <ImageView
            android:id="@+id/tile1"
            android:layout_width="75dp"
            android:layout_height="100dp"
            android:layout_row="1"
            android:layout_column="0"
            android:visibility="gone"
            app:srcCompat="@drawable/back"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/tile2"
            android:layout_width="75dp"
            android:layout_height="100dp"
            android:layout_row="1"
            android:layout_column="1"
            android:visibility="gone"
            app:srcCompat="@drawable/back"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/tile3"
            android:layout_width="75dp"
            android:layout_height="100dp"
            android:layout_row="1"
            android:layout_column="2"
            android:visibility="gone"
            app:srcCompat="@drawable/back"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/tile4"
            android:layout_width="75dp"
            android:layout_height="100dp"
            android:layout_row="1"
            android:layout_column="3"
            android:visibility="gone"
            app:srcCompat="@drawable/back"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/tile5"
            android:layout_width="75dp"
            android:layout_height="100dp"
            android:layout_row="2"
            android:layout_column="0"
            android:visibility="gone"
            app:srcCompat="@drawable/back"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/tile19"
            android:layout_width="75dp"
            android:layout_height="100dp"
            android:layout_row="5"
            android:layout_column="2"
            android:visibility="gone"
            app:srcCompat="@drawable/back"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/tile20"
            android:layout_width="75dp"
            android:layout_height="100dp"
            android:layout_row="5"
            android:layout_column="3"
            android:visibility="gone"
            app:srcCompat="@drawable/back"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/tile9"
            android:layout_width="75dp"
            android:layout_height="100dp"
            android:layout_row="3"
            android:layout_column="0"
            android:visibility="gone"
            app:srcCompat="@drawable/back"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/tile18"
            android:layout_width="75dp"
            android:layout_height="100dp"
            android:layout_row="5"
            android:layout_column="1"
            android:visibility="gone"
            app:srcCompat="@drawable/back"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/tile17"
            android:layout_width="75dp"
            android:layout_height="100dp"
            android:layout_row="5"
            android:layout_column="0"
            android:visibility="gone"
            app:srcCompat="@drawable/back"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/tile16"
            android:layout_width="75dp"
            android:layout_height="100dp"
            android:layout_row="4"
            android:layout_column="3"
            android:visibility="gone"
            app:srcCompat="@drawable/back"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/tile15"
            android:layout_width="75dp"
            android:layout_height="100dp"
            android:layout_row="4"
            android:layout_column="2"
            android:visibility="gone"
            app:srcCompat="@drawable/back"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/tile14"
            android:layout_width="75dp"
            android:layout_height="100dp"
            android:layout_row="4"
            android:layout_column="1"
            android:visibility="gone"
            app:srcCompat="@drawable/back"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/tile13"
            android:layout_width="75dp"
            android:layout_height="100dp"
            android:layout_row="4"
            android:layout_column="0"
            android:visibility="gone"
            app:srcCompat="@drawable/back"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/tile12"
            android:layout_width="75dp"
            android:layout_height="100dp"
            android:layout_row="3"
            android:layout_column="3"
            android:visibility="gone"
            app:srcCompat="@drawable/back"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/tile11"
            android:layout_width="75dp"
            android:layout_height="100dp"
            android:layout_row="3"
            android:layout_column="2"
            android:visibility="gone"
            app:srcCompat="@drawable/back"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/tile10"
            android:layout_width="75dp"
            android:layout_height="100dp"
            android:layout_row="3"
            android:layout_column="1"
            android:visibility="gone"
            app:srcCompat="@drawable/back"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/tile8"
            android:layout_width="75dp"
            android:layout_height="100dp"
            android:layout_row="2"
            android:layout_column="3"
            android:visibility="gone"
            app:srcCompat="@drawable/back"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/tile7"
            android:layout_width="75dp"
            android:layout_height="100dp"
            android:layout_row="2"
            android:layout_column="2"
            android:visibility="gone"
            app:srcCompat="@drawable/back"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/tile6"
            android:layout_width="75dp"
            android:layout_height="100dp"
            android:layout_row="2"
            android:layout_column="1"
            android:visibility="gone"
            app:srcCompat="@drawable/back"
            tools:visibility="visible" />

    </GridLayout>

    <TextView
        android:id="@+id/score"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginTop="16dp"
        android:gravity="right"
        android:text="Score:"
        android:textColor="#C346DA"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.464"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/realscore"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginTop="16dp"
        android:gravity="left"
        android:text=" 0"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/score"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/endGameButton"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="End Game"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/newGameButton"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:text="New Game"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/tryAgainButton"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Try Again"
        android:textSize="14sp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />
</androidx.constraintlayout.widget.ConstraintLayout>




